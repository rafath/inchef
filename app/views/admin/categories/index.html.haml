%header.mb-2
.float-right
  = link_to 'New category', new_admin_restaurant_category_path(params[:restaurant_id]), class: 'btn btn-success'
%h2
  Categories


%table.table.table-border.table-hover
  %tr
    %th Name
    %th Option
    - @categories.each do |category|
      %tr
        %td= category.name
        %td
          = link_to 'edit', edit_admin_restaurant_category_path(params[:restaurant_id], category.id), class: 'btn btn-success btn-sm'
          = link_to 'delete', admin_restaurant_category_path(params[:restaurant_id], category.id), class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete it?' }, method: :delete